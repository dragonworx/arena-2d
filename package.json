{
  "name": "arena-2d-monorepo",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo typecheck",
    "dev": "turbo dev --parallel",
    "kill": "sh -c 'lsof -ti:${1:-3000} | xargs kill -9 || true' --"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "turbo": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
